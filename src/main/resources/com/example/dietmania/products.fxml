<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dietmania.Controllers.ProductController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="Product Management" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      <TableView fx:id="productTable" prefHeight="200.0">
         <columns>
            <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
            <TableColumn fx:id="kcalColumn" prefWidth="150.0" text="Kcal" />
         </columns>
      </TableView>
      <VBox spacing="5.0">
         <children>
            <TextField fx:id="nameField" promptText="Product Name" />
            <TextField fx:id="descriptionField" promptText="Description" />
            <TextField fx:id="kcalField" promptText="Kcal" />
            <TextField fx:id="proteinField" promptText="Protein (g)" />
            <TextField fx:id="carbField" promptText="Carbohydrate (g)" />
            <TextField fx:id="fatField" promptText="Fat (g)" />
            <ComboBox fx:id="categoryCombo" promptText="Category" />
            <HBox spacing="10.0">
               <children>
                  <Button onAction="#handleAdd" text="Add" />
                  <Button onAction="#handleUpdate" text="Update" />
                  <Button onAction="#handleDelete" text="Delete" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>

