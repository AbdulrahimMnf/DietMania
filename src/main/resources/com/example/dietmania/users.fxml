<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dietmania.Controllers.UserController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="User Management" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      <TableView fx:id="userTable" prefHeight="200.0">
         <columns>
            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role" />
         </columns>
      </TableView>
      <VBox spacing="5.0">
         <children>
            <TextField fx:id="nameField" promptText="Name" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="passwordField" promptText="Password" />
            <TextField fx:id="kgField" promptText="Weight (kg)" />
            <TextField fx:id="lengthField" promptText="Height (cm)" />
            <TextField fx:id="ageField" promptText="Age" />
            <ComboBox fx:id="genderCombo" promptText="Gender" />
            <TextField fx:id="targetField" promptText="Target" />
            <ComboBox fx:id="roleCombo" promptText="Role" />
            <HBox spacing="10.0">
               <children>
                  <Button onAction="#handleAdd" text="Add" />
                  <Button onAction="#handleUpdate" text="Update" />
                  <Button onAction="#handleDelete" text="Delete" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>

