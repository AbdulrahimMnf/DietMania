<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dietmania.Controllers.ConsumptionController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label text="My Consumptions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      <HBox spacing="10.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label text="Available Products" />
                  <ListView fx:id="productList" prefHeight="200.0" prefWidth="300.0" />
                  <Button onAction="#handleAddProduct" text="Add Product" />
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="Selected Products" />
                  <ListView fx:id="selectedProductsList" prefHeight="200.0" prefWidth="300.0" />
                  <Button onAction="#handleRemoveProduct" text="Remove Product" />
                  <Label fx:id="totalKcalLabel" text="Total Kcal: 0" />
                  <Button fx:id="addConsumptionButton" onAction="#handleAddConsumption" text="Add Consumption" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Label text="My Consumption History" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      <TableView fx:id="consumptionTable" prefHeight="200.0">
         <columns>
            <TableColumn fx:id="dateColumn" prefWidth="200.0" text="Date" />
            <TableColumn fx:id="kcalColumn" prefWidth="150.0" text="Total Kcal" />
         </columns>
      </TableView>
   </children>
</VBox>

